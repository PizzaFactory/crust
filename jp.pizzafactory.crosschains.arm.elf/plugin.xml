<plugin>

   <extension
         point="org.eclipse.cdt.managedbuilder.core.buildDefinitions">
      <managedBuildRevision
            fileVersion="4.0.0">
      </managedBuildRevision>
      <toolChain
            archList="all"
            configurationEnvironmentSupplier="jp.pizzafactory.crosshains.CrossEnvironmentVariableSupplier"
            id="pizza.arm.elf.managedbuild.toolchain.gnu.cross.base"
            isAbstract="false"
            name="PizzaFactory arm-elf GCC"
            targetTool="pizza.arm.elf.managedbuild.tool.gnu.cross.c.linker;pizza.arm.elf.managedbuild.tool.gnu.cross.cpp.linker;pizza.arm.elf.managedbuild.tool.gnu.archiver"
            osList="all">
         <targetPlatform
               archList="all"
               binaryParser="org.eclipse.cdt.core.ELF"
               id="pizza.arm.elf.managedbuild.targetPlatform.gnu.cross"
               isAbstract="false"
               osList="all">
         </targetPlatform>
         <builder
               id="pizza.arm.elf.managedbuild.builder.gnu.cross"
               superClass="cdt.managedbuild.target.gnu.builder">
         </builder>
         <optionCategory
               id="pizza.arm.elf.managedbuild.optionCategory.gnu.cross.settings"
               name="Cross Settings">
         </optionCategory>
         <option
               category="pizza.arm.elf.managedbuild.optionCategory.gnu.cross.settings"
               id="pizza.arm.elf.managedbuild.option.gnu.cross.prefix"
               isAbstract="false"
               name="Prefix"
               resourceFilter="all"
               superClass="cdt.managedbuild.option.gnu.cross.prefix"
               valueType="string">
         </option>
         <option
               browseType="directory"
               category="pizza.arm.elf.managedbuild.optionCategory.gnu.cross.settings"
               id="pizza.arm-elf.managedbuild.option.gnu.cross.path"
               isAbstract="false"
               name="Path"
               resourceFilter="all"
               superClass="cdt.managedbuild.option.gnu.cross.path"
               valueType="string">
         </option>
         <tool
               id="pizza.arm.elf.managedbuild.tool.gnu.cross.c.compiler"
               isAbstract="false"
               name="Cross GCC Compiler"
               superClass="cdt.managedbuild.tool.gnu.cross.c.compiler">
         </tool>
         <tool
               commandLineGenerator="org.eclipse.cdt.internal.build.crossgcc.CrossCommandLineGenerator"
               id="pizza.arm.elf.managedbuild.tool.gnu.cross.cpp.compiler"
               isAbstract="false"
               name="Cross G++ Compiler"
               superClass="cdt.managedbuild.tool.gnu.cpp.compiler">
         </tool>
         <tool
               commandLineGenerator="org.eclipse.cdt.internal.build.crossgcc.CrossCommandLineGenerator"
               id="pizza.arm.elf.managedbuild.tool.gnu.cross.c.linker"
               isAbstract="false"
               name="Cross GCC Linker"
               superClass="cdt.managedbuild.tool.gnu.c.linker">
            <enablement
                  type="ALL">
               <not>
                  <checkBuildProperty
                        property="org.eclipse.cdt.build.core.buildArtefactType"
                        value="org.eclipse.cdt.build.core.buildArtefactType.staticLib">
                  </checkBuildProperty>
               </not>
            </enablement>
         </tool>
         <tool
               commandLineGenerator="org.eclipse.cdt.internal.build.crossgcc.CrossCommandLineGenerator"
               id="pizza.arm.elf.managedbuild.tool.gnu.cross.cpp.linker"
               isAbstract="false"
               name="Cross G++ Linker"
               superClass="cdt.managedbuild.tool.gnu.cpp.linker">
            <enablement
                  type="ALL">
               <not>
                  <checkBuildProperty
                        property="org.eclipse.cdt.build.core.buildArtefactType"
                        value="org.eclipse.cdt.build.core.buildArtefactType.staticLib">
                  </checkBuildProperty>
               </not>
            </enablement>
         </tool>
         <tool
               commandLineGenerator="org.eclipse.cdt.internal.build.crossgcc.CrossCommandLineGenerator"
               id="pizza.arm.elf.managedbuild.tool.gnu.cross.archiver"
               isAbstract="false"
               name="Cross GCC Archiver"
               superClass="cdt.managedbuild.tool.gnu.archiver">
            <enablement
                  type="ALL">
               <checkBuildProperty
                     property="org.eclipse.cdt.build.core.buildArtefactType"
                     value="org.eclipse.cdt.build.core.buildArtefactType.staticLib">
               </checkBuildProperty>
            </enablement>
         </tool>
         <tool
               commandLineGenerator="org.eclipse.cdt.internal.build.crossgcc.CrossCommandLineGenerator"
               id="pizza.arm.elf.managedbuild.tool.gnu.cross.assembler"
               isAbstract="false"
               name="Cross GCC Assembler"
               superClass="cdt.managedbuild.tool.gnu.assembler">
         </tool>
      </toolChain>
	  <projectType
	        buildArtefactType="org.eclipse.cdt.build.core.buildArtefactType.exe"
	        id="pizza.arm.elf.managedbuild.target.gnu.cross.exe"
	        isAbstract="false"
	        isTest="false"
	        >                                  
	     <configuration
	           name="Debug"
	           cleanCommand="rm -rf"
	           id="pizza.arm.elf.managedbuild.config.gnu.cross.exe.debug"
	           parent="cdt.managedbuild.config.gnu.base"
	           buildProperties="org.eclipse.cdt.build.core.buildType=org.eclipse.cdt.build.core.buildType.debug">
	           <toolChain
	           		 superClass="pizza.arm.elf.managedbuild.toolchain.gnu.cross.base"
	                 id="pizza.arm.elf.managedbuild.toolchain.gnu.cross.exe.debug">
	           </toolChain>                                   
	     </configuration>
	     <configuration
	           name="Release"
	           cleanCommand="rm -rf"
	           id="pizza.arm.elf.managedbuild.config.gnu.cross.exe.release"
	           parent="cdt.managedbuild.config.gnu.base"
	           buildProperties="org.eclipse.cdt.build.core.buildType=org.eclipse.cdt.build.core.buildType.release">
	           <toolChain
	                 superClass="pizza.arm.elf.managedbuild.toolchain.gnu.cross.base"
	                 id="pizza.arm.elf.managedbuild.toolchain.gnu.cross.exe.release">
	           </toolChain>                                                     
	     </configuration>
	  </projectType>              
	     
	  <projectType
	        buildArtefactType="org.eclipse.cdt.build.core.buildArtefactType.sharedLib"
	        id="pizza.arm.elf.managedbuild.target.gnu.cross.so"
	        isAbstract="false"
	        isTest="false"
	        >            
	     <configuration
	           name="Debug"
	           cleanCommand="rm -rf"
	           parent="cdt.managedbuild.config.gnu.base"
	           buildProperties="org.eclipse.cdt.build.core.buildType=org.eclipse.cdt.build.core.buildType.debug"
	           id="pizza.arm.elf.managedbuild.config.gnu.cross.so.debug">
	           <toolChain
	                 superClass="pizza.arm.elf.managedbuild.toolchain.gnu.cross.base"
	                 id="pizza.arm.elf.managedbuild.toolchain.gnu.cross.so.debug">
	           </toolChain>                                                     
	     </configuration>
	     <configuration
	           name="Release"
	           cleanCommand="rm -rf"
	           parent="cdt.managedbuild.config.gnu.base"
	           buildProperties="org.eclipse.cdt.build.core.buildType=org.eclipse.cdt.build.core.buildType.release"
	           id="pizza.arm.elf.managedbuild.config.gnu.cross.so.release">               
	           <toolChain
	                 superClass="pizza.arm.elf.managedbuild.toolchain.gnu.cross.base"
	                 id="pizza.arm.elf.managedbuild.toolchain.gnu.cross.so.release">
	           </toolChain>                                                                                
	     </configuration>
	  </projectType>
	                   
	  <projectType
	        buildArtefactType="org.eclipse.cdt.build.core.buildArtefactType.staticLib"
	        id="pizza.arm.elf.managedbuild.target.gnu.cross.lib"
	        isAbstract="false"
	        isTest="false"
	        >            
	     <configuration
	           name="Debug"
	           parent="cdt.managedbuild.config.gnu.base"
	           buildProperties="org.eclipse.cdt.build.core.buildType=org.eclipse.cdt.build.core.buildType.debug"
	           cleanCommand="rm -rf"
	           id="pizza.arm.elf.managedbuild.config.gnu.cross.lib.debug">
	           <toolChain
	                 superClass="pizza.arm.elf.managedbuild.toolchain.gnu.cross.base"
	                 id="pizza.arm.elf.managedbuild.toolchain.gnu.cross.lib.debug">
	           </toolChain>                                                                                				               				  
	     </configuration>
	     <configuration
	           name="Release"
	           parent="cdt.managedbuild.config.gnu.base"
	           buildProperties="org.eclipse.cdt.build.core.buildType=org.eclipse.cdt.build.core.buildType.release"
	           cleanCommand="rm -rf"
	           id="pizza.arm.elf.managedbuild.config.gnu.cross.lib.release">
	           <toolChain
	                 superClass="pizza.arm.elf.managedbuild.toolchain.gnu.cross.base"
	                 id="pizza.arm.elf.managedbuild.toolchain.gnu.cross.lib.release">
			</toolChain>                                                                                				                    
         </configuration>         
      </projectType>
